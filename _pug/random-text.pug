- function randomText(n = 15) {
-   const pool = 'abcdefghijklmnopqrstuvwxyz';
-   let result = '';
-   for (let i = 0; i < n; i++) {
-     let word = '';
-     for (let j = 0; j < 3 + Math.random() * 5; j++)
-       word += pool[Math.floor(Math.random() * pool.length)];
-     result += word + ' ';
-   }
-   return result.trim() + '.';
- }

